set(r3_VERSION x.y.z)

@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/r3Targets.cmake")

set_and_check(r3_INCLUDE_DIR "@PACKAGE_INCLUDE_INSTALL_DIR@")
set_and_check(r3_LIBRARY r3)

# Transitive dependencies.
find_package(Boost REQUIRED)
find_package(DART REQUIRED COMPONENTS core)
find_package(Eigen REQUIRED)
find_package(OMPL REQUIRED)

# Both direct and transitive dependencies.
set_and_check(r3_INCLUDE_DIRS
  ${r3_INCLUDE_DIR}
  ${Boost_INCLUDE_DIRS}
  ${DART_INCLUDE_DIRS}
  ${Eigen_INCLUDE_DIRS}
  ${OMPL_INCLUDE_DIRS}
)
set_and_check(r3_LIBRARIES
  ${r3_LIBRARY}
  ${Boost_LIBRARIES}
  ${DART_LIBRARIES}
  ${OMPL_LIBRARIES}
)
